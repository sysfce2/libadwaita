<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AdwViewSwitcherDemoWindow" parent="AdwWindow">
    <property name="width-request">360</property>
    <property name="height-request">200</property>
    <property name="default-width">800</property>
    <property name="default-height">600</property>
    <property name="title">Title</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 500sp</condition>
        <setter object="layout" property="current-layout">compact_layout</setter>
      </object>
    </child>
    <property name="content">
      <object class="AdwAdaptiveHost" id="layout">
        <child>
          <object class="AdwAdaptiveLayout">
            <property name="bytes"><![CDATA[
<interface>
  <object class="AdwOverlaySplitView" id="root">
    <property name="sidebar">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="start">
              <object class="GtkButton">
                <property name="icon-name">list-add-symbolic</property>
                <signal name="clicked" handler="clicked_cb" swapped="yes"/>
              </object>
            </child>
            <child type="end">
              <object class="AdwAdaptiveSlot" id="menu"/>
            </child>
          </object>
        </child>
        <property name="content">
          <object class="AdwAdaptiveSlot" id="sidebar"/>
        </property>
      </object>
    </property>
    <property name="content">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <property name="show-title">False</property>
          </object>
        </child>
        <property name="content">
          <object class="AdwAdaptiveSlot" id="content"/>
        </property>
      </object>
    </property>
  </object>
</interface>
            ]]></property>
          </object>
        </child>
        <child>
          <object class="AdwAdaptiveLayout" id="compact_layout">
            <property name="bytes"><![CDATA[
<interface>
  <object class="AdwToolbarView" id="root">
    <property name="top-bar-style">raised</property>
    <property name="bottom-bar-style">raised</property>
    <child type="top">
      <object class="AdwHeaderBar">
        <child type="start">
          <object class="GtkToggleButton" id="show_sidebar_button">
            <property name="icon-name">sidebar-show-symbolic</property>
          </object>
        </child>
        <child type="end">
          <object class="AdwAdaptiveSlot" id="menu"/>
        </child>
      </object>
    </child>
    <property name="content">
      <object class="AdwOverlaySplitView">
        <property name="collapsed">True</property>
        <property name="show-sidebar"
                  bind-source="show_sidebar_button"
                  bind-property="active"
                  bind-flags="sync-create|bidirectional"/>
        <property name="sidebar">
          <object class="AdwAdaptiveSlot" id="sidebar"/>
        </property>
        <property name="content">
          <object class="GtkOverlay">
            <property name="child">
              <object class="AdwAdaptiveSlot" id="content"/>
            </property>
            <child type="overlay">
              <object class="GtkButton">
                <property name="icon-name">list-add-symbolic</property>
                <property name="halign">end</property>
                <property name="valign">end</property>
                <signal name="clicked" handler="clicked_cb" swapped="yes"/>
                <style>
                  <class name="suggested-action"/>
                  <class name="circular"/>
                  <class name="fab"/>
                </style>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </object>
</interface>
            ]]></property>
          </object>
        </child>
        <child type="menu">
          <object class="GtkMenuButton">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="menu-model">primary_menu</property>
          </object>
        </child>
        <child type="sidebar">
          <object class="GtkLabel">
            <property name="label">Sidebar</property>
            <style>
              <class name="title-1"/>
            </style>
          </object>
        </child>
        <child type="content">
          <object class="GtkLabel">
            <property name="label">Content</property>
            <style>
              <class name="title-1"/>
            </style>
          </object>
        </child>
      </object>
    </property>
  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About conditional-thing</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
